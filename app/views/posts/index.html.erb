<h1 class="mb-4">投稿一覧</h1>

<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-4 col-sm-6 mb-4">
      <div class="card h-100">
        <%= link_to post_path(post) do %>
          <%= post_thumbnail(post) %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to post.title, post_path(post), class: 'text-decoration-none text-dark' %>
          </h5>
          <p class="card-text">
            by <%= link_to post.user.username, user_path(post.user), class: 'text-decoration-none' %>
          </p>
        </div>
        <div class="card-footer text-muted">
          <span><i class="fas fa-heart"></i> <%= post.likes.count %></span>
          <span class="ml-3"><i class="fas fa-comment"></i> <%= post.comments.count %></span>
        </div>
      </div>
    </div>
  <% end %>
</div>
